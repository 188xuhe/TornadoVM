#!/bin/bash

. ${TORNADO_ROOT}/etc/tornado.conf

JAVA_FLAGS="${JAVA_FLAGS} -Dgraal.Dump -Dgraal.PrintIdealGraph=true -Dgraal.PrintCFG=true"

DEPS=""
for f in $(ls ${TORNADO_ROOT}/target/*.jar); do
        DEPS="${DEPS}:${f}"
done

if [ -z "${CLASSPATH}" ]; then
        CLASSPATH=${DEPS}
else
        CLASSPATH="${CLASSPATH}:${DEPS}"
fi

CLASSPATH=${CLASSPATH} ${JAVA_CMD} ${JAVA_FLAGS} $@
