#!/bin/bash

. ${TORNADO_ROOT}/etc/tornado.conf

DEPS=""
for f in $(ls ${TORNADO_ROOT}/target/*.jar); do
        DEPS="${DEPS}:${f}"
done

if [ -z "${CLASSPATH}" ]; then
        CLASSPATH=${DEPS}
else
        CLASSPATH="${CLASSPATH}:${DEPS}"
fi

export JAVACMD=${JAVA_CMD}
export CLASSPATH=${CLASSPATH}
export JAVA_OPTS=${JAVA_FLAGS}
scala-2.11 $@
